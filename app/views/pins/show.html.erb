<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @pin.image %>
			<p class="description">
			  <%= @pin.description %>
			</p>
			<p>
			  <strong>
					Posted by <%= link_to @pin.user.name, profile_path(@pin.user.id) %>
				</strong>
			</p>
			<% if current_user == @pin.user %>
				<%= link_to 'Edit', edit_pin_path(@pin) %>
			<% end %>
			<%= link_to 'Back', :back %>
		</div>
	</div>
</div>
